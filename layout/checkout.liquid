  <body>
    {{ skip_to_content_link }}

    <header class="banner" data-header role="banner">
      <div class="wrap">
        {{ content_for_logo }}
      </div>
    </header>

    {{ order_summary_toggle }}
    <div class="content" data-content>
      <div class="wrap">
        <div class="main">
          <header class="main__header" role="banner">
            {{ content_for_logo }}
            {{ breadcrumb }}
            {{ alternative_payment_methods }}
          </header>
          <main class="main__content" role="main">
            {{ content_for_layout }}
          </main>
          <footer class="main__footer" role="contentinfo">
            {{ content_for_footer }}
          </footer>
        </div>
        <aside class="sidebar" role="complementary">
          <div class="sidebar__header">
            {{ content_for_logo }}
          </div>
          <div class="sidebar__content">
            {{ content_for_order_summary }}
          </div>
        </aside>
      </div>
    </div>

    {{ tracking_code }}
    <script>
      let ups_ground_note = '{{ shop.metafields.custom_fields["ups_ground_note"] }}';
      let ups_2nd_day_note = '{{ shop.metafields.custom_fields["ups_2nd_day_note"] }}';
      let usps_first_class_note = '{{ shop.metafields.custom_fields["usps_first_class"] }}';
      let usps_priority_note = '{{ shop.metafields.custom_fields["usps_priority"] }}';

      $(document).ready(function () {

        $(".content-box .content-box__row").each(function () {
          {%- if shop.metafields.custom_fields["ups_ground_note"] != blank -%}
          if ($(this).find(".radio__label__primary").text().indexOf("UPS® Ground") > -1) {
            $(this).find(".radio__label__primary").find('br,span').remove();
            $(this).find(".radio__label__primary").append(`<br><span class="small-text">${ups_ground_note}</span>`)
          }
          {%- endif -%}
          {%- if shop.metafields.custom_fields["ups_2nd_day_note"] != blank -%}
          if ($(this).find(".radio__label__primary").text().indexOf("UPS 2nd Day Air") > -1) {
            $(this).find(".radio__label__primary").find('br,span').remove();
{% comment %}
            //$(this).find(".radio__label__primary").append(`<br><span class="small-text">${ups_2nd_day_note}</span>`)
{% endcomment %}
            $(this).find(".radio__label__primary").append(`<br><span class="small-text">Any order placed M-F before 12 P.M. PST will be processed and shipped the same day. Otherwise, it will ship the next business day.</span>`)
          }
          {%- endif -%}
          {%- if shop.metafields.custom_fields["usps_first_class"] != blank -%}
          if ($(this).find(".radio__label__primary").text().indexOf("USPS First Class") > -1) {
            $(this).find(".radio__label__primary").find('br,span').remove();
            $(this).find(".radio__label__primary").append(`<br><span class="small-text">${usps_first_class_note}</span>`)
          }
          {%- endif -%}
          {%- if shop.metafields.custom_fields["usps_priority"] != blank -%}
          if ($(this).find(".radio__label__primary").text().indexOf("USPS Priority Mail") > -1) {
            $(this).find(".radio__label__primary").find('br,span').remove();
            $(this).find(".radio__label__primary").append(`<br><span class="small-text">${usps_priority_note}</span>`)
          }
          {%- endif -%}
        });

        $(document).on('DOMNodeInserted', function (e) {

          if ($(e.target).attr("class") == "content-box") {
            $(".content-box .content-box__row").each(function () {
              {%- if shop.metafields.custom_fields["ups_ground_note"] != blank -%}
              if ($(this).find(".radio__label__primary").text().indexOf("UPS® Ground") > -1) {
                $(this).find(".radio__label__primary").find('br,span').remove();
                $(this).find(".radio__label__primary").append(`<br><span class="small-text">${ups_ground_note}</span>`)
              }
              {%- endif -%}
              {%- if shop.metafields.custom_fields["ups_2nd_day_note"] != blank -%}
              if ($(this).find(".radio__label__primary").text().indexOf("UPS 2nd Day Air") > -1) {
                $(this).find(".radio__label__primary").find('br,span').remove();
                $(this).find(".radio__label__primary").append(`<br><span class="small-text">${ups_2nd_day_note}</span>`)
              }
              {%- endif -%}
              {%- if shop.metafields.custom_fields["usps_first_class"] != blank -%}
              if ($(this).find(".radio__label__primary").text().indexOf("USPS First Class") > -1) {
                $(this).find(".radio__label__primary").find('br,span').remove();
                $(this).find(".radio__label__primary").append(`<br><span class="small-text">${usps_first_class_note}</span>`)
              }
              {%- endif -%}
              {%- if shop.metafields.custom_fields["usps_priority"] != blank -%}
              if ($(this).find(".radio__label__primary").text().indexOf("USPS Priority Mail") > -1) {
                $(this).find(".radio__label__primary").find('br,span').remove();
                $(this).find(".radio__label__primary").append(`<br><span class="small-text">${usps_priority_note}</span>`)
              }
              {%- endif -%}
            });
          }
        });

      });
    </script>

