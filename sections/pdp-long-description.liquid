      <div class="px-[16px] lg:px-0">
        <h2 class="font-bold text-[32px] md:text-[48px] pt-0 text-center headline uppercase mb-14 p-0 italic">{{ section.settings.title }}</h2>
        <div class="tabbed">
          {% for block in section.blocks %}
            <input type="radio" id="tab{{ block.id }}" name="css-tabs2">
          {% endfor %}
          <input type="radio" id="tab{{ section.id }}" name="css-tabs2">
          <ul class="tabs flex justify-center">
            {% for block in section.blocks %}
            <li class="tab w-1/3 text-center"><label for="tab{{ block.id }}">{{ block.settings.tab-title }}</label></li>
            {% endfor %}
            <li class="tab w-1/3 text-center"><label for="tab{{ section.id }}">{{ section.settings.tab-title-results }}</label></li>
          </ul>
          {% for block in section.blocks %}
