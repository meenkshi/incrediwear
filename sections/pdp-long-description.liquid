{{ 'wearable-wellness.css' | asset_url | stylesheet_tag }}

{% if section.blocks.size > 0 %}
<div class="wearable-wellness-section__wrapper long-description-section__wrapper overflow-hidden relative pt-[104px] pb-[12px] lg:pt-[178px] md:pb-[158px]">
